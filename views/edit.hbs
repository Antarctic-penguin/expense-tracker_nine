<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <form action="/record/{{record._id}}?_method=PUT" method="POST">
        <div class="title mb-4 text-center">
          <h2 class="ml-4 ">修改支出紀錄</h2>
          <p class="fs-6">(*項目為必填)</p>
        </div>
        <div class="input-group mb-4">
          <div class="input-group-prepend">
            <span class="input-group-text">名稱*</span>
          </div>
          <input type="text" class="form-control" name="name" value="{{record.name}}">
        </div>

        <div class="input-group mb-4">
          <div class="input-group-prepend">
            <span class="input-group-text">日期*</span>
          </div>
          <input type="date" class="form-control" name="date" value="{{record.date}}">
        </div>
        <div class="input-group mb-4">
          <div class="input-group-prepend">
            <label for="category" class="input-group-text">類別*</label>
          </div>
          <select name="category" id="category" class="form-control">
            {{#each categoryList}}
            <option value="{{this._id}}" {{#helper1 this.name ../record.category.name}} selected{{/helper1}}>
              {{this.name}}
            </option>
            {{/each}}
          </select>
        </div>

        <div class="input-group mb-4">
          <div class="input-group-prepend">
            <span class="input-group-text">金額*</span>
          </div>
          <input type="number" class="form-control" min="0" name="amount" value="{{record.amount}}">
        </div>
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-primary me-2 w-50">儲存</button>
          <a href="/" class="btn btn-primary">返回</a>
        </div>
      </form>
    </div>
  </div>
</div>